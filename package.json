{
  "name": "@static-pages/markdown-reader",
  "version": "1.1.1",
  "description": "Markdown reader for static pages.",
  "type": "module",
  "main": "./cjs/index.js",
  "module": "./esm/index.js",
  "browser": "./esm/index.js",
  "exports": {
    ".": {
      "require": "./cjs/index.js",
      "default": "./esm/index.js"
    }
  },
  "scripts": {
    "prepack": "npm run build",
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "tsc",
    "build:cjs": "tsc --outDir cjs --module commonjs",
    "watch:esm": "tsc --watch",
    "watch:cjs": "tsc --watch --outDir cjs --module commonjs",
    "test": "eslint src && npm run build && jest",
    "clean": "rimraf esm cjs/*.?s"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/staticpagesjs/markdown-reader.git"
  },
  "keywords": [
    "markdown",
    "front-matter",
    "static-pages",
    "reader"
  ],
  "author": "László BULIK",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/staticpagesjs/markdown-reader/issues"
  },
  "homepage": "https://github.com/staticpagesjs/markdown-reader#readme",
  "dependencies": {
    "@static-pages/file-reader": "^2.0.0",
    "front-matter": "^4.0.2"
  },
  "devDependencies": {
    "@types/node": "^16.9.3",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "eslint": "^8.2.0",
    "jest": "^27.3.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.4.4"
  }
}
